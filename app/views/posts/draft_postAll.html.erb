<h2>Show All Draft_Post</h2>

<table class="table table-hover">
<thead  class="thead-light">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @draft_posts.each do |dp| %>
    <tr>
      <td><%= dp.id %></td>
      <td><%= dp.image %></td>
      <td><%= dp.status %></td>
    </tr>
  <% end %>
</tbody>